@(Html.Components().Grid<SampleData>("sample-table")
      .Css("table table-striped table-bordered")
      .Rows(row => row.Css("tr-item-calculate"))
      .Columns(cols =>
               {
                   cols.Add().Field(s => s.Name).Width(200);
                   cols.Add().Field(s => s.Description).Title("Notes");

                   cols.Add().Field(s => s.Amount).Width(100);
                   cols.Add().Field(s => s.AmountPercentage).Width(100);
                   cols.Add().Field(s => s.Balance).Width(100);

                   cols.Spreaded(s => s.Period, 5,
                                 (cols, i) =>
                                 {
                                     cols.Stacked(s => s.Title("JTD"),
                                                  cols =>
                                                  {
                                                      cols.Add().Field(s => s.Hours).Title("Hrs").Width(100);
                                                      cols.Add().Field(s => s.JTD).Title("$").Width(100);
                                                  });
                                 });
               })
      .Render())
