@{
    Layout = "_Layout";
}

<div class="d-flex flex-column vh-100 pb-3">
    <div class="d-flex gap-3 mx-3 my-3">
        @(Html.When(JqueryBind.Click)
              .OnSuccess(dsl => dsl.With(s => s.EqualsAttribute("role", "main")).Insert.WithTemplateByView("~/Views/Examples/Regular.cshtml").Html())
              .AsHtmlAttributes(new
                                {
                                        @class = "btn btn-primary"
                                })
              .ToButton(@<text>
                             Regular
                         </text>))

        @(Html.When(JqueryBind.Click)
              .OnSuccess(dsl => dsl.With(s => s.EqualsAttribute("role", "main")).Insert.WithTemplateByView("~/Views/Examples/Spread.cshtml").Html())
              .AsHtmlAttributes(new
                                {
                                        @class = "btn btn-primary"
                                })
              .ToButton(@<text>
                             Spread
                         </text>))
    </div>

    <div class="container flex-grow-1 overflow-auto" role="main"></div>
</div>
