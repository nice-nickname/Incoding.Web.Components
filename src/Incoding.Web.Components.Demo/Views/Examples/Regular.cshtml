@(Html.Components().Grid<SampleData>("sample-table")
      .Css("table table-striped table-bordered")
      .Rows(row => row.Css("tr-item-calculate"))
      .Columns(cols =>
               {
                   cols.Add().Field(s => s.Name);
                   cols.Add().Field(s => s.Description).Title("Notes");

                   cols.Add().Field(s => s.Amount);
                   cols.Add().Field(s => s.AmountPercentage);
                   cols.Add().Field(s => s.Balance);

                   cols.Stacked(s => s.Title("JTD"),
                                cols =>
                                {
                                    cols.Add().Field(s => s.JTDHours);
                                    cols.Add().Field(s => s.JTDDollars);
                                });
               })
      .Render())
